<%- model_class = Cliente -%>
<div class="page-header">
  <h1><%=t '.title', :default => Cliente %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:nombre) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.nombre %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:apellido) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.apellido %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:email) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.email %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:otros_datos) %></dt>
      <dd><pre class="prettyprint"><%= @cliente.otros_datos %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              clientes_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_path(@cliente), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_path(@cliente),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

