<h2>Editar Usuario</h2>

<%= simple_form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, required: true, autofocus: true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, autocomplete: "off", label: "Contraseña", hint: "deje el campo en blanco si no desea modificarla", required: false %>
    <%= f.input :password_confirmation, label: "Confirmar Contraseña", required: false %>
    <%= f.input :current_password, label: "Contraseña actual", hint: "necesitamos su clave actual para confirmar los cambios", required: true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Update" %>
  </div>
<% end %>

<h3>Cancelar mi cuenta</h3>

<p>No le gusta el servicio? <%= link_to "Cancelar mi cuenta", registration_path(resource_name), data: { confirm: "Are you sure?" }, method: :delete %></p>

<%= link_to "Atras", :back %>
