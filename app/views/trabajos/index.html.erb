<h1>Listing trabajos</h1>

<table>
  <thead>
    <tr>
      <th>Cliente</th>
      <th>Descripcion</th>
      <th>Tipo trabajo</th>
      <th>Fecha</th>
      <th>Valor</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @trabajos.each do |trabajo| %>
      <tr>
        <td><%= trabajo.cliente %></td>
        <td><%= trabajo.descripcion %></td>
        <td><%= trabajo.tipo_trabajo %></td>
        <td><%= trabajo.fecha %></td>
        <td><%= trabajo.valor %></td>
        <td><%= link_to 'Show', trabajo %></td>
        <td><%= link_to 'Edit', edit_trabajo_path(trabajo) %></td>
        <td><%= link_to 'Destroy', trabajo, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

