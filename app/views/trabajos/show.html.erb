<%- model_class = Trabajo -%>
<div class="page-header">
  <h1><%=t '.title', :default => Trabajo %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:descripcion) %></dt>
      <dd><pre class="prettyprint"><%= @trabajo.descripcion %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:fecha) %></dt>
      <dd><pre class="prettyprint"><%= @trabajo.fecha %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:valor) %></dt>
      <dd><pre class="prettyprint"><%= number_to_currency(@trabajo.valor) %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              cliente_trabajos_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_cliente_trabajo_path(@cliente, @trabajo), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              cliente_trabajo_path(@cliente, @trabajo),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

